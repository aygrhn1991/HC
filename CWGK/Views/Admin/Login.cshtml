
@{
    ViewBag.Title = "登录";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div ng-controller="LoginCtrl">
    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name" style="opacity:0;">H+</h1>
            </div>
            <h3>桦川县村务公开专属网格资源平台</h3>
            <form class="m-t">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="用户名" ng-model="model.account">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="密码" ng-model="model.password">
                </div>
                <button class="btn btn-primary block full-width m-b" ng-click="login()">登 录</button>
            </form>
        </div>
    </div>
</div>

