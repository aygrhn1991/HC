
@{
    ViewBag.Title = "Password";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div ng-controller="PasswordCtrl">
    <div class="content-wrapper ibox float-e-margins">
        <div class="ibox-title">
            <h5>修改密码</h5>
            <div class="ibox-tools refresh">
                <button type="button" class="btn btn-primary btn-sm" ng-click="refresh()"><i class="fa fa-refresh"></i></button>
            </div>
        </div>
        <div class="ibox-content">
            <form class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-4 control-label">原密码</label>
                    <div class="col-sm-4">
                        <input type="password" class="form-control" ng-model="model.oldPassword">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">新密码</label>
                    <div class="col-sm-4">
                        <input type="password" class="form-control" ng-model="model.newPassword">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label">确认密码</label>
                    <div class="col-sm-4">
                        <input type="password" class="form-control" ng-model="model.confirmPassword">
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-4 control-label"></label>
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-primary btn-sm" ng-click="edit()">保存</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

