
@{
    Layout = null;
}

<header class="am-header am-header-default">
    <div class="am-header-left am-header-nav" ng-click="back()">
        <a>
            <i class="am-header-icon am-icon-chevron-left"></i>
        </a>
    </div>
    <h1 class="am-header-title">
        <a>我的提问</a>
    </h1>
</header>
<div class="am-list-news am-list-news-default">
    <div class="am-titlebar am-titlebar-default">
        <h2 class="am-titlebar-title">我的提问</h2>
    </div>
    <div style="margin:10px 5px;">
        <div class="am-panel am-panel-default" ng-repeat="d in data">
            <div class="am-panel-hd" style="padding:3px 10px;font-size:14px;">
                <strong>
                    <span style="color:green;" ng-if="d.answer!=null">【已回复】</span>
                    <span style="color:orange;" ng-if="d.answer==null">【未回复】</span>
                    {{d.newstitle}}
                </strong><small>{{d.time}}</small>
            </div>
            <div class="am-panel-bd" style="font-size:14px;padding:10px 15px;">
                <p style="margin-bottom:10px;">
                    <a ng-click="getFile(d)" ng-if="d.filecount!=0">[附件]&nbsp;</a>{{d.question}}
                </p>
                <blockquote ng-if="d.answer!=null" style="padding-top:0;padding-bottom:0;margin:0;" class="ng-binding ng-scope">回复：{{d.answer}}</blockquote>
            </div>
        </div>
    </div>
    <div id="page"></div>
</div>
<div class="am-modal am-modal-no-btn" tabindex="-1" id="modal">
    <div class="am-modal-dialog">
        <div class="am-modal-hd">
            附件<a class="am-close am-close-spin" data-am-modal-close>&times;</a>
        </div>
        <div class="am-modal-bd" style="text-align:left;">
            <img ng-src="{{'/Upload/'+f.filename}}" ng-repeat="f in files" style="width:100%;margin-bottom:10px;" />
        </div>
    </div>
</div>
